<h1>Edit Product</h1>

<%=simple_form_for [:admin, @product] do |f| %>
  <div class="group">
    <%= f.input :title %>
  </div>

  <div class="group">
    <%= f.input :description %>
  </div>

  <div class="group">
    <%= f.input :quantity %>
  </div>

  <div class="group">
    <%= f.input :price %>
  </div>

  <% if @product.image.present? %>
    <span>当前图片为：</span>
    <br>
    <%= image_tag(@product.image.thumb.url) %>
  <% else %>
    <p>还未上传图片</p>
  <% end %>

  <div class="group">
    <%= f.input :image, as: :file %>
  </div>

  <%= f.submit "Submit", data: {disable_with: "Submiting..."} %>
<% end %>
